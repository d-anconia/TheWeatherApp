<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1ba1ee"
    tools:context="gorchakov.danil.theweatherapp.MainActivity"
    >
    <TextView
        android:id="@+id/textCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Moscow, RUS"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"/>
    
    <ImageView
        android:id="@+id/iconImage"
        android:layout_below="@+id/textCity"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tempText"
        android:text="12 deg"
        android:textStyle="normal"
        android:textColor="#fff"
        android:layout_below="@+id/textCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="42sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/windText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Wind"
        android:layout_below="@+id/iconImage"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cloudText"
        android:text="Cloud"
        android:layout_below="@+id/windText"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pressureText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cloudText"
        android:text="Pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/humidText"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pressureText"
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/riseText"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/humidText"
        android:text="Sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/setText"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/riseText"
        android:text="Sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/updateText"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/setText"
        android:layout_centerHorizontal="true"
        android:text="Last updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
